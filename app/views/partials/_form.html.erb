<h3>Add a Task!</h3>
<%= form_for (Task.new) do |f| %>
  <ul>
    <%= f.label :title, "Task name" %><br/>
    <%= f.text_field  :title %> <br/>
    <br/>
    <%= f.label :description %><br/>
    <%= f.text_area :description, size: "50x10" %><br/>

    <%= f.submit "Create Task" %>
  </ul>
<% end %>

